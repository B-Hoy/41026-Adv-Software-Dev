{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Maven WAR Compile",
            "type": "shell",
            "command": "mvn package"
        },
		{
			"label": "Update pom.xml version",
			"dependsOn": ["Maven WAR Compile"],
			"type": "shell",
			"command": "mv pom.xml.new-version pom.xml",
			"windows": {
				"command": "move /y pom.xml.new-version pom.xml"
			},
            "group": {
                "kind": "build",
                "isDefault": true
            }
		}
    ]
}
